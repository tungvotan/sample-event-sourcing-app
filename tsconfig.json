{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version.
    "module": "commonjs", // Specify module code generation.
    "strict": true, // Enable strict type-checking options.
    "esModuleInterop": true, // Enables inter-operation between CommonJS and ES modules.
    "skipLibCheck": true, // Skip type checking of declaration files.
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports.
    "rootDir": "./src", // Specify the root directory of input files.
    "outDir": "./dist", // Redirect output structure to the directory.
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the 'src' directory.
  "exclude": ["node_modules", "dist"] // Exclude the 'node_modules' and 'dist' directories.
}
